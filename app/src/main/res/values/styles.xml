<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="searchViewStyle">@style/msv</item>
        <item name="android:textColorPrimary">@android:color/holo_blue_dark</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <!--        <item name="android:editTextColor">@android:color/white</item>-->
        <!--        <item name="android:textColorHint">@android:color/white</item>-->

    </style>

    <style name="msv" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@color/color1</item>
        <item name="queryHint">@string/search_hint</item>
    </style>
</resources>
